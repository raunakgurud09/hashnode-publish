{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "collectCoverage": true,
  "coverageReporters": [
    "lcov",
    "text-summary"
  ],
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/__tests__/",
    "lib",
    "dist"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "lib",
    "dist"
  ]
}